<h1>Add A New Director</h1>

<form action="http://localhost:3000/create_director">
  <div>
    <label for="director_name">Name:</label>
    <input id="director_name" type="text" name="the_name">
  </div>
  <div>
    <label for="director_bio">Bio:</label>
    <textarea class="FormElement" id="director_bio" cols="40" rows="5" name="the_bio"></textarea>
  </div>
  <div>
    <label for="director_dob">Dob:</label>
    <input id="director_dob" type="text" name="the_dob">
  </div>
  <div>
    <label for="director_image_url">Director Image URL:</label>
    <input id="director_image_url" type="text" name="the_source">
  </div>
  <div>
    <button>Create Director</button>
  </div>
</form>